{
  "name": "show-passwd-extension",
  "version": "1.0.0",
  "private": true,
  "description": "Browser extension that adds eye icons to password fields when native toggles are absent.",
  "type": "module",
  "scripts": {
    "copy:static": "node scripts/copy-static.mjs",
    "dev": "npm run copy:static && tsup --watch --env.NODE_ENV=development",
    "build": "tsup --env.NODE_ENV=production && npm run copy:static",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "10.4.1",
    "@types/chrome": "0.1.22",
    "@types/jest": "30.0.0",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "esbuild": "0.25.10",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "jest": "30.2.0",
    "jsdom": "27.0.0",
    "prettier": "3.2.5",
    "ts-jest": "29.1.3",
    "tsup": "8.0.1",
    "typescript": "5.4.5"
  }
}