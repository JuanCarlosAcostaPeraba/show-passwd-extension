{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["src", "tests", "extension"],
  "exclude": ["dist", "node_modules"]
}
